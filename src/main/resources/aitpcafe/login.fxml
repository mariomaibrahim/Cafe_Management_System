<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane prefHeight="550.0" prefWidth="900.0" stylesheets="@logindesign.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aitpcafe.LoginController">

    <children>
        <AnchorPane prefHeight="550.0" prefWidth="900.0">

            <AnchorPane fx:id="si_loginform" layoutX="450.0" layoutY="0.0" prefHeight="550.0" prefWidth="450.0" styleClass="white-form">
                <children>
                    <Label layoutX="145.0" layoutY="130.0" styleClass="head-label" text="Login Account">
                        <font><Font name="System Bold" size="26.0" /></font>
                    </Label>

                    <TextField fx:id="si_username" layoutX="115.0" layoutY="220.0" onAction="#loginBtn" prefHeight="45.0" prefWidth="240.0" promptText="Username" styleClass="text-field" />

                    <PasswordField fx:id="si_password" layoutX="115.0" layoutY="285.0" onAction="#loginBtn" prefHeight="45.0" prefWidth="240.0" promptText="Password" styleClass="text-field" />

                    <Hyperlink fx:id="si_forgotpass" layoutX="115.0" layoutY="340.0" onAction="#forgotPassBtn" text="Forgot Password?" />

                    <Button fx:id="si_loginbtn" layoutX="115.0" layoutY="390.0" onAction="#loginBtn" prefHeight="50.0" prefWidth="240.0" styleClass="login-btn" text="Login" />
                </children>
            </AnchorPane>

            <AnchorPane fx:id="fp_forgotpassform" layoutX="0.0" layoutY="0.0" prefHeight="550.0" prefWidth="450.0" styleClass="white-form-left" visible="false">
                <children>
                    <Label layoutX="90.0" layoutY="80.0" styleClass="head-label" text="Forgot Password">
                        <font><Font name="System Bold" size="26.0" /></font>
                    </Label>

                    <TextField fx:id="fp_username" layoutX="105.0" layoutY="170.0" prefHeight="45.0" prefWidth="240.0" promptText="Username" styleClass="text-field" />

                    <ComboBox fx:id="fp_question" layoutX="105.0" layoutY="235.0" prefHeight="45.0" prefWidth="240.0" promptText="Select Question" styleClass="text-field" />

                    <TextField fx:id="fp_answer" layoutX="105.0" layoutY="300.0" prefHeight="45.0" prefWidth="240.0" promptText="Answer" styleClass="text-field" />

                    <PasswordField fx:id="fp_newpassword" layoutX="105.0" layoutY="365.0" prefHeight="45.0" prefWidth="240.0" promptText="New Password" styleClass="text-field" />

                    <Button fx:id="fp_proceedbtn" layoutX="105.0" layoutY="430.0" onAction="#proceedBtn" prefHeight="50.0" prefWidth="240.0" styleClass="login-btn" text="Proceed" />

                    <Button fx:id="fp_backbtn" layoutX="158.0" layoutY="495.0" onAction="#backToLoginBtn" prefHeight="35.0" prefWidth="134.0" styleClass="back-btn" text="Back to Login" />
                </children>
            </AnchorPane>

            <AnchorPane fx:id="side_form" layoutX="0.0" layoutY="0.0" prefHeight="550.0" prefWidth="450.0" styleClass="gradient">
                <children>
                    <FontIcon iconColor="WHITE" iconLiteral="fas-mug-hot" iconSize="110" layoutX="170.0" layoutY="180.0" />

                    <Label layoutX="105.0" layoutY="210.0" text="Cafe Management System" textAlignment="CENTER" textFill="WHITE">
                        <font><Font name="System Bold" size="20.0" /></font>
                    </Label>

                    <Label layoutX="149.0" layoutY="312.0" text="Welcome!" textFill="WHITE">
                        <font><Font name="System Bold" size="32.0" /></font>
                    </Label>

                    <Label layoutX="137.0" layoutY="378.0" text="Please login to continue" textFill="WHITE">
                        <font><Font name="System" size="17.0" /></font>
                    </Label>
                </children>
            </AnchorPane>
        </AnchorPane>
    </children>
</StackPane>
